<package>
	<id>com.obumbravit.betterwidgets</id>
	<name>BetterWidgets</name>
	<version>1.1</version>
	<compatibility>
		<firmware>
			<miniOS>11.0</miniOS>
			<otherVersions>unsupported</otherVersions>
			<!--
			for otherVersions, you can put either unsupported or unconfirmed
			-->
		</firmware>
	</compatibility>
	<dependencies></dependencies>
	<descriptionlist>
		<description>Widget view customization!</description>
		<description>Features:</description>
		<description>-Always Expanded Widgets</description>
		<description>-Square Widgets</description>
		<description>-Transparent Widgets</description>
		<description>-Hide Widget Header</description>
		<description>-Disable LS Time Padding</description>
		<description>-Custom Edit Button Text</description>
		<description>-Square Edit Button</description>
		<description>-Transparent Edit Button</description>
		<description>-Custom Footer Text Color</description>
	</descriptionlist>
